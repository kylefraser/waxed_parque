.soundcloud
  width: 650px
  height: 350px
  position: relative
  margin: 125px 60px 0px 0px
  float: right

.soundcloud-content
  width: 650px
  height: 350px
  position: relative

.soundcloud-center
  padding-top: 80px
  z-index: 2
  position: relative

.soundcloud-background
	width: 650px
	height: 350px
	background-size: cover
	background-position: center center
	opacity: .6
	position: absolute

.soundcloud-artist
  color: white
  text-align: center
  font-size: 2em
  font-family: 'Montserrat', sans-serif
  font-variant: small-caps
  position: relative
  letter-spacing: -1px
  font-weight: 400
  margin-top: -20px

.soundcloud-title
  color: white
  text-align: center
  font-size: 3em
  font-family: 'Montserrat', sans-serif
  margin-top: -40px
  font-variant: small-caps
  position: relative
  font-weight: 700

.soundcloud-icon
  fill: white


.px2
  padding-left: 1rem
  padding-right: 1rem

.flex
  display: flex

.flex-center
  -webkit-box-align: center
  -webkit-align-items: center
  -ms-flex-align: center
  align-items: center

.flex>div
  box-sizing: border-box

.flex-auto
  -webkit-box-flex: 1
  -webkit-flex: 1 1 auto
  -ms-flex: 1 1 auto
  flex: 1 1 auto

.rounded
  border-radius: 3px

.button-transparent
  position: relative
  z-index: 2
  color: inherit
  background-color: transparent
  border-radius: 0
  border: 1px solid transparent
  -webkit-transition-duration: .1s
  transition-duration: .1s
  -webkit-transition-timing-function: ease-out
  transition-timing-function: ease-out
  -webkit-transition-property: box-shadow
  transition-property: box-shadow

.progress
  display: block
  width: 100%
  height: 1rem
  margin: .5rem 0
  background-color: rgba(0,0,0,.08)
  border: 0
  border-radius: 10000px
  overflow: hidden
  -webkit-appearance: none
  cursor: pointer
  position: relative

.progress::-webkit-progress-bar{-webkit-appearance:none;background-color:rgba(0,0,0,.0625)}
.progress::-webkit-progress-value{-webkit-appearance:none;background-color:#fff}
.progress::-moz-progress-bar{background-color:#fff}

.playlist-controls
  width: 30%
  height: 44px
  position: absolute
  margin-left: 50%

.previous
  position: absolute
  top: 8px
  left: 20px

.next
  position: absolute
  top: 8px
  left: 130px

.playpause
  position: absolute
  top: -3px
  left: 70px

.playlist-buttons
  width: 30px
  background: none
  border: none
  color: #fff
  vertical-align: sub
  margin-left: -6px

.playlist-buttons:hover
  color: gold

.playlist-menu
  width: 420px
  float: right
  display: none
  margin-top: 30px

.playlist-controls:hover .playlist-menu
  display: block

.playlist-item
  list-style: none

.playlist-button
  border: none
  background: black
  width: 420px
  text-align: left

.current-track-title
  display: block
  font-size: 0.75em
  width: 220px
  overflow: hidden
  height: 15px
  margin: 0
  position: relative
  top: 13px
  right: 30px
  text-align: right
  float: right

.play-button
  fill: white

.play-button:hover
  fill:  gold

.circle-play-button
  border-radius: 50%
  -webkit-border-radius: 50%
  -moz-border-radius: 50%
  border: 4px solid white
  margin: 0px auto 30px auto
  width: 150px
  height: 150px

.waveform-color
  position:absolute
  top:0
  bottom:0
  left:0
  right:0
  background: #FF5A36

.more-music-card-container
  float: left
  width: 20%
  position: relative

.more-music-card-details
  width: 100%
  position: absolute
  bottom: 40px

.music-card-circle
  border-radius: 50%
  -webkit-border-radius: 50%
  -moz-border-radius: 50%
  border: 4px solid white
  margin: 20px auto 20px auto
  padding: 14px 16px
  width: 60px
  height: 60px

.more-music-card-progress
  width: 80%
  margin: 0 10%

.button-small
  width: 40px
  height: 40px

@media only screen and (min-width : 768px) and (max-width : 1024px)
  .soundcloud-artist
    color: white
    text-align: center
    font-size: 1.5em
    font-family: 'Montserrat', sans-serif
    font-variant: small-caps
    position: relative
    letter-spacing: -1px
    font-weight: 400
    margin-top: -60px

  .soundcloud-title
    color: white
    text-align: center
    font-size: 2em
    font-family: 'Montserrat', sans-serif
    margin-top: -40px
    font-variant: small-caps
    position: relative
    font-weight: 700
